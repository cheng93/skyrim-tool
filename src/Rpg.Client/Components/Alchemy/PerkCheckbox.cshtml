<div class="alchemy-stats--perk">
    <span class="mdc-typography--body1">@Label</span>
    <div class="mdc-switch">
        <input type="checkbox" class="mdc-switch__native-control" onchange="@(e => Change((bool)e.Value))" />
        <div class="mdc-switch__background">
            <div class="mdc-switch__knob"></div>
        </div>
    </div>
</div>

@functions
{
    [Parameter]
    private string Label { get; set; }

    [Parameter]
    private Action<bool> Change { get; set; }
}